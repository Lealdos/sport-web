---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link rel='icon' type='image/svg+xml' href='/LOGO-SPORTS.png' />
        <script
            type='module'
            src='https://cdn.jsdelivr.net/npm/@justinribeiro/lite-youtube@1/lite-youtube.min.js'
        ></script>
        <meta name='generator' content={Astro.generator} />
        <title>Sport 96.7 FM</title>
    </head>
    <body '>
        <Header />
        <slot />
        <Footer />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;

        background: rgb(3, 0, 238);
        background: -moz-linear-gradient(
            162deg,
            rgba(3, 0, 238, 1) 0%,
            rgba(0, 104, 255, 1) 48%,
            rgba(255, 0, 0, 1) 100%
        );
        background: -webkit-linear-gradient(
            162deg,
            rgba(3, 0, 238, 1) 0%,
            rgba(0, 104, 255, 1) 48%,
            rgba(255, 0, 0, 1) 100%
        );
        background: linear-gradient(
            162deg,
            rgba(3, 0, 238, 1) 0%,
            rgba(0, 104, 255, 1) 48%,
            rgba(255, 0, 0, 1) 100%
        );
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#0300ee",endColorstr="#ff0000",GradientType=1);
    }
</style>
