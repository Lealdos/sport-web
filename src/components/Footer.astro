---
const SocialMedia = [
    {
        name: 'WhatsApp',
        url: 'https://wa.me/584249309508',
        icon: '/icons/logo_whatsapp.svg',
        label: 'Contáctenos al WhatsApp',
        style: 'h-6 w-6 bg-green-400 rounded-full',
    },
    {
        name: 'Instagram',
        url: 'https://www.instagram.com/sports96.7/',
        icon: '/icons/Instagram_logo.svg',
        label: 'Síguenos en Instagram',
        style: 'h-6 w-6 bg-black rounded-lg',
    },
];
---

<footer class='bg-blue-950 shadow-fuchsia-800 text-white py-2'>
    <div class='container mx-auto text-center'>
        <div class='flex flex-col justify-center items-center space-x-4'>
            <div class='text-xl'>Síguenos en nuestras redes sociales</div>
            <div class='flex gap-4 my-2'>
                {
                    SocialMedia.map((media) => (
                        <a
                            aria-label={media.label}
                            href={media.url}
                            target='_blank'
                            rel='noreferrer'
                            class='flex gap-2 items-center'
                        >
                            <img
                                src={media.icon}
                                alt='Logo'
                                class={media.style}
                            />
                        </a>
                    ))
                }
            </div>
        </div>
        <p class='mt-4'>&copy; 2012 Sports 96.7FM All rights reserved.</p>
    </div>
</footer>
